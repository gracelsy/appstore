{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "gitIgnoredAuthors": [
    "githubaction@githubaction.com"
  ],
  "rebaseWhen": "never",
  "ignorePaths": [
    ".github/workflows/**",
    "apps/gracelsy-1panel-apps/**"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "docker-compose"
      ],
      "automerge": true
    },
    {
      "matchFileNames": [
        "apps/gracelsy-tinyauth/4.*.*/*.yml"
      ],
      "allowedVersions": "/^4.*/"
    }
  ],
  "prCreation": "immediate"
}
